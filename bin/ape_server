$:.unshift File.dirname(__FILE__) + '/../lib'

require 'rubygems'
require 'mongrel'
require 'optparse'
require 'ape/server'
require 'ape/samples'

OPTIONS = {
  :host => '0.0.0.0',
  :port => '4000',
  :home => nil
}

parser = OptionParser.new do |opts|
  opts.banner = '@@ FIXME'
  opts.separator ''
  opts.on('-a', '--address ADDRESS', 'Address to bind to', "default: #{OPTIONS[:host]}") { |v| OPTIONS[:host] = v }
  opts.on('-p', '--port PORT', 'Port to bind to', "default: #{OPTIONS[:port]}") { |v| OPTIONS[:port] = v }
  opts.on('-d', '--directory DIRECTORY', 'ape home directory', "default: #{Ape::Samples.ape_home}") { |v| OPTIONS[:home] = v }
  opts.on('-h', '--help', 'Displays this help') { puts opts; exit }
  opts.parse!(ARGV)
end

Ape::Server.run(OPTIONS)
